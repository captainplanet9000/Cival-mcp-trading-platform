# Cival Dashboard Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Cival Trading Dashboard"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# =============================================================================
# API CONNECTIVITY SETTINGS
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_RETRY_ATTEMPTS=3

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://user:password@host:port
REDIS_PASSWORD=your-redis-password

# =============================================================================
# TRADING & MARKET DATA APIs
# =============================================================================
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
POLYGON_API_KEY=your-polygon-key

# =============================================================================
# AI & LLM INTEGRATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXT_PUBLIC_SOLO_OPERATOR_MODE=true
NEXT_PUBLIC_REQUIRE_AUTH=false
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_ENABLE_AGENTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_USE_MOCK_DATA=true